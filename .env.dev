# ========================================
# CONFIGURAÇÃO PARA DESENVOLVIMENTO LOCAL
# ========================================

# === SERVIDOR ===
SERVER_TYPE=http                                # Tipo do servidor (http/https)
SERVER_PORT=8080                                # Porta onde a API irá rodar
SERVER_URL=http://localhost:8080               # URL base da API para referências internas
SERVER_DISABLE_DOCS=false                      # Se true, desabilita documentação Swagger
SERVER_DISABLE_MANAGER=false                   # Se true, desabilita interface de gerenciamento

# === CORS (Cross-Origin Resource Sharing) ===
CORS_ORIGIN=*                                  # Origens permitidas (* = todas)
CORS_METHODS=POST,GET,PUT,DELETE               # Métodos HTTP permitidos
CORS_CREDENTIALS=true                          # Permite cookies/credenciais cross-origin

# === BANCO DE DADOS (SQLite para desenvolvimento) ===
DATABASE_PROVIDER=sqlite                       # Tipo do banco (sqlite/postgresql/mysql)
DATABASE_CONNECTION_URI=file:./dev.db          # Caminho do arquivo SQLite
DATABASE_CONNECTION_CLIENT_NAME=evolution      # Nome do cliente para conexão

# === SALVAR DADOS (Configure conforme sua necessidade) ===
# IMPORTANTE: Configurações globais que afetam TODAS as instâncias

# ✅ MANTIDO - Necessário para funcionamento básico da API
DATABASE_SAVE_DATA_INSTANCE=true                # Salva dados básicos da instância (obrigatório)

# ❌ DESABILITADO - Para não reter dados desnecessários
DATABASE_SAVE_DATA_NEW_MESSAGE=false            # ❌ NÃO salva mensagens enviadas/recebidas
DATABASE_SAVE_MESSAGE_UPDATE=false              # ❌ NÃO salva atualizações de mensagens (status, edições)
DATABASE_SAVE_DATA_CONTACTS=false               # ❌ NÃO salva contatos sincronizados do WhatsApp
DATABASE_SAVE_DATA_CHATS=false                  # ❌ NÃO salva conversas/chats
DATABASE_SAVE_DATA_LABELS=false                 # ❌ NÃO salva labels/etiquetas
DATABASE_SAVE_DATA_HISTORIC=false               # ❌ NÃO salva histórico completo
DATABASE_SAVE_IS_ON_WHATSAPP=false              # ❌ NÃO salva status de números no WhatsApp
DATABASE_SAVE_IS_ON_WHATSAPP_DAYS=7             # Dias para cache (irrelevante se desabilitado)

# === CACHE (Armazenamento temporário) ===
CACHE_REDIS_ENABLED=false                      # ❌ Redis desabilitado (requer servidor Redis)
CACHE_REDIS_URI=                               # URL de conexão do Redis (vazio = desabilitado)
CACHE_REDIS_PREFIX_KEY=                        # Prefixo das chaves no Redis
CACHE_LOCAL_ENABLED=true                       # ✅ Cache local em memória habilitado

# === LOGS (Registro de atividades) ===
LOG_LEVEL=ERROR,WARN,DEBUG,INFO,LOG,VERBOSE,DARK,WEBHOOKS  # Níveis de log exibidos
LOG_COLOR=true                                 # Cores nos logs do terminal
LOG_BAILEYS=error                              # Nível de log da biblioteca Baileys (WhatsApp)

# === WEBHOOK GLOBAL (Notificações HTTP) ===
WEBHOOK_GLOBAL_ENABLED=false                   # ❌ Webhooks globais desabilitados
WEBHOOK_GLOBAL_URL=                            # URL para receber webhooks (vazio = desabilitado)
WEBHOOK_GLOBAL_WEBHOOK_BY_EVENTS=false        # Se true, separa webhooks por tipo de evento

# === RABBITMQ (Sistema de filas/mensageria) ===
RABBITMQ_ENABLED=false                         # ❌ RabbitMQ desabilitado (requer servidor RabbitMQ)

# === SQS (Amazon Simple Queue Service) ===
SQS_ENABLED=false                              # ❌ AWS SQS desabilitado

# === PUSHER (WebSockets em tempo real) ===
PUSHER_ENABLED=false                           # ❌ Pusher desabilitado (requer conta Pusher)

# === WEBSOCKET (Conexões em tempo real) ===
WEBSOCKET_ENABLED=true                         # ✅ WebSockets habilitados para comunicação real-time

# === AUTENTICAÇÃO (Segurança da API) ===
AUTHENTICATION_API_KEY_ENABLED=false           # ❌ API Key desabilitada (sem segurança)
AUTHENTICATION_API_KEY_KEY=                    # Chave da API (vazio = sem autenticação)
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=true  # Mostra tokens nas consultas de instâncias

# === QRCODE (Conexão WhatsApp) ===
QRCODE_LIMIT=10                                # Máximo de tentativas de geração de QR Code
QRCODE_COLOR=#198754                           # Cor do QR Code em hexadecimal

# === TYPEBOT (Chatbots automáticos) ===
TYPEBOT_ENABLED=false                          # ❌ Integração com Typebot desabilitada

# === CHATWOOT (Sistema de atendimento) ===
CHATWOOT_ENABLED=false                         # ❌ Integração com Chatwoot desabilitada

# === S3/MINIO (Armazenamento de arquivos) ===
S3_ENABLE=false                                # ❌ Armazenamento S3/MinIO desabilitado

# === PROXY GLOBAL (Rede/Conectividade) ===
PROXY_GLOBAL_ENABLED=false                     # ❌ Proxy global desabilitado

# === FILA GLOBAL (Controle de rate limiting) ===
GLOBAL_QUEUE_ENABLED=true                      # ✅ Sistema de filas habilitado
GLOBAL_QUEUE_RATE_LIMIT=500                    # Máximo de requests por intervalo
GLOBAL_QUEUE_RATE_INTERVAL=60000               # Intervalo em ms (60000 = 1 minuto)

# === TOKEN BUCKET (Algoritmo de rate limiting) ===
TOKEN_BUCKET_CAPACITY=500                      # Capacidade máxima de tokens
TOKEN_BUCKET_REFILL_RATE=500                   # Tokens adicionados por intervalo
TOKEN_BUCKET_REFILL_INTERVAL=60000             # Intervalo de reabastecimento em ms

# === WEBHOOK MONITORAMENTO (Métricas e saúde) ===
WEBHOOK_MONITORING_URL=                        # URL para monitoramento (vazio = desabilitado)
WEBHOOK_MONITORING_ENABLED=false              # ❌ Monitoramento via webhook desabilitado

# === FILTROS DE ÁUDIO (Controle de processamento de áudios) ===
AUDIO_FILTER_ENABLED=true                     # ✅ Filtros de áudio habilitados
AUDIO_FILTER_DEFAULT_MIN_SECONDS=3            # Duração mínima padrão em segundos
AUDIO_FILTER_DEFAULT_MAX_SECONDS=7200         # Duração máxima padrão em segundos (2 horas)
AUDIO_FILTER_REPLY_TO_OVERSIZE=true           # ✅ Sistema reage a mensagens maiores que o máximo global
AUDIO_FILTER_OVERSIZE_REACTION=\u2758             # Emoji de reação para áudios que excedem limite global
AUDIO_FILTER_OVERSIZE_MESSAGE=Áudio acima do limite de 2 horas  # Mensagem para áudios que excedem limite global