# Configurações S3-Only para Áudio - Evolution API Lite
# Adicione essas variáveis ao seu .env existente

# ===============================================
# S3 AUDIO CONFIGURATIONS - DIA 5 IMPLEMENTADO
# ===============================================

# URL expiry para áudios em segundos (padrão: 3600 = 1 hora)
S3_AUDIO_URL_EXPIRY=3600

# Habilitar cleanup automático de arquivos antigos
S3_CLEANUP_ENABLED=true

# Dias para manter arquivos de áudio (padrão: 7 dias)
S3_CLEANUP_DAYS=7

# ===============================================
# EXEMPLO DE CONFIGURAÇÃO S3 COMPLETA
# ===============================================

# Habilitar S3/MinIO
S3_ENABLED=true

# Configurações do servidor S3/MinIO
S3_ENDPOINT=localhost
S3_PORT=9000
S3_USE_SSL=false
S3_REGION=us-east-1

# Credenciais
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123

# Nome do bucket
S3_BUCKET=evolution